@model FoodDiary.Controllers.DiaryViewModel

@{
    ViewData["Title"] = "Diary";
}

<h1>@ViewData["Title"]</h1>
<br/>
<p>
    <a asp-controller="Products" asp-action="Index" asp-route-diaryId="@Model.DiaryId" asp-route-pr="">Add product to diary</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            Product name
        </th>
        <th>
            Weight
        </th>
        <th>
            Kcal
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Diary)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Weight</td>
            <td>@item.Kcal</td>
        </tr>
    }
    </tbody>
</table>