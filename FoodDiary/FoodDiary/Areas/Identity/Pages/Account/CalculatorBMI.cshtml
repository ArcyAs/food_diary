@page
@model CalculatorBMI


@{
    ViewData["Title"] = "CalculatorBMI";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Age"></label>
                <input asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Height[cm]</label>
                <input asp-for="Input.Height" class="form-control" />
                <span asp-validation-for="Input.Height" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Weight[kg]</label>
                <input asp-for="Input.Weight" class="form-control" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.GenderType" class="control-label"></label>
                <select asp-for="Input.GenderType" asp-items="Html.GetEnumSelectList<CalculatorBMI.InputModel.Gender>()" class="form-control"></select>
                <span asp-validation-for="Input.GenderType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Show</button>
        </form>
    </div>
</div>
<div class="col-md-6 col-md-offset-2">
    <section>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>

                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>

                            }
                        </p>
                    </div>
                </form>
            }
        }
    </section>
</div>

@section Scripts {

}
